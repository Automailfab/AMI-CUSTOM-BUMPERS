{%- comment -%} JavaScript to handle mobile custom filter clicks {%- endcomment -%}
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle mobile custom filter checkbox clicks
  document.querySelectorAll('.mobile-facets__checkbox[data-filter-url]').forEach(function(checkbox) {
    checkbox.addEventListener('change', function() {
      const filterUrl = this.getAttribute('data-filter-url');
      if (filterUrl) {
        window.location.href = filterUrl;
      }
    });
  });
});
</script>